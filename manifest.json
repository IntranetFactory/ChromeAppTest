{
  "manifest_version": 2,
  "name": "Now Assistant",
  "version": "1.0.0.5",
  "icons": {
    "19":"img/icon_19.png",
    "38":"img/icon_38.png",
    "64":"img/icon_64.png",
    "128":"img/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19":"img/icon_19_red.png",
      "38":"img/icon_38_red.png"
    },
    "default_popup": "html/index.html"
  },
  "permissions": [
    "storage",
    "cookies",
    "http://*/*",
    "https://*/*"
   ],
  "options_page": "html/options.html",
  "background": {
    "page": "html/background.html"
  }
}
